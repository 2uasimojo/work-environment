alias ocm-production="OCM_CONFIG=${XDG_CONFIG_HOME:-$HOME/.config}/ocm/production/config ocm"
alias ocm-staging="OCM_CONFIG=${XDG_CONFIG_HOME:-$HOME/.config}/ocm/staging/config ocm"
alias ocm-integration="OCM_CONFIG=${XDG_CONFIG_HOME:-$HOME/.config}/ocm/integration/config ocm"

alias ocm-prod=ocm-production
alias ocm-stg=ocm-staging
alias ocm-int=ocm-integration
