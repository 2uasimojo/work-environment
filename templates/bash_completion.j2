if [ -d "{{ ansible_user_dir }}/{{ bash_completion_d }}" ]; then
    for file in $(ls "{{ ansible_user_dir }}/{{ bash_completion_d }}"); do
        if [ -r "{{ ansible_user_dir }}/{{ bash_completion_d }}/$file" ]; then
            . "{{ ansible_user_dir }}/{{ bash_completion_d }}/$file"
        fi
    done
fi
